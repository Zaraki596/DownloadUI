<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_dwnld_apk"
            android:id="@+id/iv_dwnld_file_type"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@+id/tv_dwnlded_file_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dwd_file_size_total"/>
    <TextView
            android:text="Music name..........apk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dwnlded_file_name" android:textColor="#000"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@+id/iv_dwnld_file_type" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_share"/>
    <TextView
            android:text="500.34 MB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dwd_file_size_total" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_dwnld_file_type" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dwnlded_file_name" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_dwnld_share"
            android:id="@+id/iv_share"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dwd_file_size_total" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_dwnlded_file_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>